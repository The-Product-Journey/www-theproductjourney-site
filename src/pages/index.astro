---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Brands from '~/components/widgets/Brands.astro';

import { YouTube } from 'astro-embed';
import Hero2 from '~/components/widgets/Hero2.astro';
import heroImage from '../assets/images/collaboration.jpeg';

const metadata = {
  title: 'The Product Journey',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero2
    tagline="Innovation Redefined"
    actions={[
      { variant: 'primary', text: "Let's Chat", href: '/contact' },
      { text: 'Learn More', href: '#features' },
    ]}
    image={{
      src: heroImage,
      alt: 'Diverse team collaborating on product journey mapping',
    }}
  >
    <Fragment slot="title">
      Transform your vision <br />into <span class="text-accent dark:text-white highlight">Reality</span>
    </Fragment>

    <Fragment slot="subtitle">
      Expert product guidance at every step of your journey. We help ambitious teams turn innovative ideas into successful products through strategic development and thoughtful execution.
    </Fragment>
  </Hero2>

  <Features2
    title="About Us"
    subtitle="More than consultants, we're your dedicated product partners. Our team integrates seamlessly with yours, bringing expertise in strategy, development, and design to every project. We believe in transparent collaboration, shared goals, and celebrating successes together. Your product journey becomes our journey, and your challenges become our mission."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Brands Widget ****************** -->

  <Brands
    title="Partnerships & Collaborations"
    subtitle="We are proud to get to work with great partners in the business world who seek to improve lives through technology"
    icons={[]}
    images={[
