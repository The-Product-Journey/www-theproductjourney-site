---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';

const metadata = {
  title: 'Thank You',
};
---

<Layout metadata={metadata}>
  <Hero>
    <Fragment slot="title">
      <span class="animate-fade-up">Thank You for Reaching Out!</span>
    </Fragment>
    <Fragment slot="subtitle">
      <div class="animate-fade-up animation-delay-200 mb-8">
        <span class="text-accent dark:text-accent">We've received your message</span> and will get back to you shortly. In the meantime, feel free to explore our services or check out our latest projects.
      </div>
    </Fragment>
    <Fragment slot="actions">
      <div class="animate-fade-up animation-delay-500 flex gap-4 mt-4">
        <a href="/" class="btn btn-primary transition-transform hover:-translate-y-1">Back to Home</a>
        <a href="/projects" class="btn transition-transform hover:-translate-y-1">View Projects</a>
      </div>
    </Fragment>
  </Hero>
</Layout>

<style>
  .animation-delay-200 {
    animation-delay: 200ms;
  }
  .animation-delay-500 {
    animation-delay: 500ms;
  }
  .animate-fade-up {
    animation: fadeUp 0.8s ease-out forwards;
    opacity: 0;
  }
  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style> 